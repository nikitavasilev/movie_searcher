<div class="container margin-header-bis text-center">
  <h3>Browse a movie ðŸŽ¬</h3>
  <form class="margin-header" action="/search" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="text" class="form-control" name="movie_name" placeholder="Browse..">
    <button type="submit" class="btn btn-width btn-hover">Search</button>
  </form>
</div>

<div class="container margin-header text-center" style="box-sizing: content-box;">
  <% if @movies == {} %>
    <h4 class="text-center margin-header">No movies found..</h4>
  <% elsif @movies %>
    <div class="row text-center">
      <% @movies.each do |id, movie| %>
        <div class="card" style="width: 18rem; border: none; margin: 1px; background: #000; color: #000;">
          <img class="centered-and-cropped" width="288" height="400"
          src="https://image.tmdb.org/t/p/w200<%= movie[:poster_path] %>" alt="Poster of <%= movie[:name] %>">
          <div class="card-body" style="margin-bottom: 1px; background: #fff;">
            <h5 class="card-title"><strong><%= movie[:name] %></strong></h5>
            <p class="card-text"><strong>Directed by </strong><%= movie[:director] %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item" style="border: none!important;"><strong>Release: </strong><%= movie[:release_date] %></li>
          </ul>
        </div>
      <% end %>
    </div>
  <%end%>
</div>